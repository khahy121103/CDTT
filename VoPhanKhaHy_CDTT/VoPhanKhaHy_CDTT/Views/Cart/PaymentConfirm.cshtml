@{
    ViewBag.Title = "Kết quả thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <h3 class="mb-0">
                        <i class="fa fa-credit-card mr-2"></i>
                        Kết quả thanh toán
                    </h3>
                </div>
                <div class="card-body p-5">
                    @if (ViewBag.Success == true)
                    {
                        <div class="text-center">
                            <div class="mb-4">
                                <i class="fa fa-check-circle text-success" style="font-size: 80px;"></i>
                            </div>
                            <h4 class="text-success mb-3">Thanh toán thành công!</h4>
                            <p class="text-muted mb-4">@ViewBag.Message</p>
                            
                            @if (ViewBag.OrderId != null)
                            {
                                <div class="alert alert-info">
                                    <strong>Mã đơn hàng:</strong> @ViewBag.OrderId
                                </div>
                            }
                            
                            <div class="mt-4">
                                <a href="@Url.Action("Index", "Home")" class="btn btn-primary mr-3">
                                    <i class="fa fa-home mr-2"></i>Về trang chủ
                                </a>
                                <a href="@Url.Action("Index", "Order")" class="btn btn-outline-primary">
                                    <i class="fa fa-list mr-2"></i>Xem đơn hàng
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center">
                            <div class="mb-4">
                                <i class="fa fa-times-circle text-danger" style="font-size: 80px;"></i>
                            </div>
                            <h4 class="text-danger mb-3">Thanh toán thất bại!</h4>
                            <p class="text-muted mb-4">@ViewBag.Message</p>
                            
                            <div class="mt-4">
                                <a href="@Url.Action("Index", "Cart")" class="btn btn-warning mr-3">
                                    <i class="fa fa-shopping-cart mr-2"></i>Quay lại giỏ hàng
                                </a>
                                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                                    <i class="fa fa-home mr-2"></i>Về trang chủ
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    
    .card-header {
        border-bottom: none;
    }
    
    .btn {
        border-radius: 25px;
        padding: 10px 25px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    
    .alert {
        border-radius: 10px;
        border: none;
    }
    
    .fa-check-circle {
        animation: bounceIn 0.6s ease-out;
    }
    
    .fa-times-circle {
        animation: shake 0.5s ease-in-out;
    }
    
    @keyframes bounceIn {
        0% {
            transform: scale(0.3);
            opacity: 0;
        }
        50% {
            transform: scale(1.05);
        }
        70% {
            transform: scale(0.9);
        }
        100% {
            transform: scale(1);
            opacity: 1;
        }
    }
    
    @keyframes shake {
        0%, 100% { transform: translateX(0); }
        10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
        20%, 40%, 60%, 80% { transform: translateX(5px); }
    }
</style>
